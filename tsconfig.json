{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "typescript-source",
    "outDir": ".",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["typescript-source/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}